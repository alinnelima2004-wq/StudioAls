    <!-- Modal de Orçamento -->
    <div id="budget-modal-backdrop" class="modal-backdrop" aria-hidden="true">
        <div id="budget-modal" class="modal-content bg-white p-6 rounded-2xl shadow-2xl max-w-sm w-11/12" role="dialog" aria-modal="true" aria-labelledby="modal-title" aria-describedby="modal-body">
            <h3 id="modal-title" class="text-2xl font-bold text-pink-800 mb-3 border-b pb-2">Orçamento</h3>

            <div id="modal-body" class="mb-4 text-gray-700 space-y-1">
                <!-- Conteúdo inserido com JS de forma segura -->
            </div>

            <div class="bg-pink-50 p-3 rounded-lg border border-pink-100 mt-4">
                 <p class="text-sm text-pink-700 font-semibold flex items-center">
                    <i class="fa-solid fa-house-chimney text-pink-500 mr-2" aria-hidden="true"></i>
                    Atendimento a Domicílio: <span class="ml-2 font-bold">Consulte a taxa de deslocamento.</span>
                </p>
                <p class="text-xs text-gray-500 mt-1">*Taxa de deslocamento não inclusa no valor base.</p>
            </div>

            <button id="modal-close-btn" type="button" class="mt-6 w-full bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 rounded-full transition duration-300">
                Fechar
            </button>
        </div>
    </div>

    <script>
        // Dados de Orçamento (fonte confiável local)
        const PRICES = {
            "Manicure": { price: 30.00, details: "Corte, lixamento, cutilagem e esmaltação básica." },
            "Pedicure": { price: 40.00, details: "Corte, lixamento, cutilagem e esmaltação dos pés." },
            "Escova": { price: 60.00, details: "Lavagem e escovação dos fios (valor pode variar conforme o volume/tamanho)." },
            "Design de sobrancelha": { price: 30.00, details: "Modelagem e design das sobrancelhas com pinça e/ou cera." },
            "Plástica dos pés": { price: 70.00, details: "Tratamento profundo para hidratação e remoção de calosidades." },
            "Esmaltação em Gel (Mão)": { price: 50.00, details: "Aplicação de esmalte em gel na mão com secagem rápida e alta durabilidade. Não inclui cutilagem e lixamento." },
            "Esmaltação em Gel (Pé)": { price: 45.00, details: "Aplicação de esmalte em gel no pé com secagem rápida e alta durabilidade. Não inclui cutilagem e lixamento." },
            "Henna na Sobrancelha": { price: 40.00, details: "Aplicação de Henna para preenchimento e definição da sobrancelha. Inclui design." }
        };

        const formatPrice = (value) => value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

        const modalBackdrop = document.getElementById('budget-modal-backdrop');
        const modal = document.getElementById('budget-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalBody = document.getElementById('modal-body');
        const modalCloseBtn = document.getElementById('modal-close-btn');
        const mainEl = document.getElementById('main');

        let lastActiveElement = null;

        function openModalForService(serviceName, openerBtn) {
            const service = PRICES[serviceName];
            if (!service) return;

            lastActiveElement = openerBtn || document.activeElement;

            modalTitle.textContent = serviceName;

            modalBody.innerHTML = '';
            const priceEl = document.createElement('p');
            priceEl.className = 'text-3xl font-extrabold text-pink-600 text-center mb-4';
            priceEl.textContent = formatPrice(service.price);
            const detailsEl = document.createElement('p');
            detailsEl.className = 'text-base text-center';
            detailsEl.textContent = service.details;
            const hr = document.createElement('hr');
            hr.className = 'my-3 border-pink-100';
            const note = document.createElement('p');
            note.className = 'text-sm text-gray-500 text-center';
            note.textContent = 'Valor base. Atendimento em Itapevi/SP.';

            modalBody.appendChild(priceEl);
            modalBody.appendChild(detailsEl);
            modalBody.appendChild(hr);
            modalBody.appendChild(note);

            modalBackdrop.style.display = 'flex';
            modalBackdrop.setAttribute('aria-hidden', 'false');
            mainEl.setAttribute('aria-hidden', 'true');
            document.body.style.overflow = 'hidden';

            setTimeout(() => modalCloseBtn.focus(), 50);
        }

        function closeModal() {
            modalBackdrop.style.display = 'none';
            modalBackdrop.setAttribute('aria-hidden', 'true');
            mainEl.setAttribute('aria-hidden', 'false');
            document.body.style.overflow = '';
            if (lastActiveElement && typeof lastActiveElement.focus === 'function') {
                lastActiveElement.focus();
            }
        }

        // Booking form handling: stores to localStorage and opens WhatsApp prefilled message
        const bookingForm = document.getElementById('booking-form');
        const bookingFeedback = document.getElementById('booking-feedback');
        const clearBtn = document.getElementById('clear-booking');

        function sanitize(text) {
            return String(text || '').trim();
        }

        function buildWhatsAppMessage(data) {
            return encodeURIComponent(
                `Olá! Gostaria de agendar \nNome: ${data.name}\nTelefone: ${data.phone}\nServiço: ${data.service}\nData: ${data.date} \nHorário: ${data.time}\nObservações: ${data.notes || '-'} `
            );
        }

        document.addEventListener('DOMContentLoaded', () => {
            const serviceButtons = document.querySelectorAll('[data-service]');
            serviceButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const name = btn.getAttribute('data-service');
                    openModalForService(name, btn);
                });
                // also allow opening booking form preselecting service when ctrl/shift-click
                btn.addEventListener('dblclick', () => {
                    const svc = btn.getAttribute('data-service');
                    const select = document.getElementById('service-select');
                    if (select) select.value = svc;
                    document.getElementById('client-name').focus();
                });
            });

            modalBackdrop.addEventListener('click', (e) => {
                if (e.target === modalBackdrop) closeModal();
            });

            modalCloseBtn.addEventListener('click', closeModal);

            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && modalBackdrop.style.display === 'flex') {
                    closeModal();
                }
            });

            modal.addEventListener('keydown', (e) => {
                if (e.key !== 'Tab') return;
                const focusable = modal.querySelectorAll('button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])');
                if (focusable.length === 0) return;
                const first = focusable[0];
                const last = focusable[focusable.length - 1];
                if (e.shiftKey && document.activeElement === first) {
                    e.preventDefault();
                    last.focus();
                } else if (!e.shiftKey && document.activeElement === last) {
                    e.preventDefault();
                    first.focus();
                }
            });

            // Booking form
            if (bookingForm) {
                bookingForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    const formData = new FormData(bookingForm);
                    const data = {
                        name: sanitize(formData.get('name')),
                        phone: sanitize(formData.get('phone')),
                        service: sanitize(formData.get('service')),
                        date: sanitize(formData.get('date')),
                        time: sanitize(formData.get('time')),
                        notes: sanitize(formData.get('notes'))
                    };

                    if (!data.name || !data.phone || !data.service || !data.date || !data.time) {
                        bookingFeedback.textContent = 'Por favor, preencha todos os campos obrigatórios.';
                        bookingFeedback.classList.remove('hidden');
                        bookingFeedback.classList.add('text-red-600');
                        return;
                    }

                    // Save to localStorage as a small queue (no backend)
                    const queue = JSON.parse(localStorage.getItem('studio_bookings') || '[]');
                    queue.push({ ...data, createdAt: new Date().toISOString() });
                    localStorage.setItem('studio_bookings', JSON.stringify(queue));

                    // Open WhatsApp with prefilled message to confirm booking
                    const waMsg = buildWhatsAppMessage(data);
                    const waUrl = `https://wa.me/5511982006485?text=${waMsg}`;

                    bookingFeedback.textContent = 'Agendamento preparado. Você será redirecionado para o WhatsApp para confirmar.';
                    bookingFeedback.classList.remove('hidden');
                    bookingFeedback.classList.remove('text-red-600');
                    bookingFeedback.classList.add('text-green-600');

                    // small delay to allow users to read message (and for mobile-friendly behavior)
                    setTimeout(() => {
                        window.open(waUrl, '_blank', 'noopener');
                    }, 800);
                });

                clearBtn.addEventListener('click', () => {
                    bookingForm.reset();
                    bookingFeedback.classList.add('hidden');
                });
            }
        });
    </script>
</body>
</html>