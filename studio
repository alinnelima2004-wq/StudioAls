    <script>
        // Dados de Orçamento
        const PRICES = {
            "Manicure": { price: 30.00, details: "Corte, lixamento, cutilagem e esmaltação básica." },
            "Pedicure": { price: 40.00, details: "Corte, lixamento, cutilagem e esmaltação dos pés." },
            "Escova": { price: 60.00, details: "Lavagem e escovação dos fios (valor pode variar conforme o volume/tamanho)." },
            "Design de sobrancelha": { price: 30.00, details: "Modelagem e design das sobrancelhas com pinça e/ou cera." },
            "Plástica dos pés": { price: 70.00, details: "Tratamento profundo para hidratação e remoção de calosidades." },
            // NOVOS SERVIÇOS
            "Esmaltação em Gel (Mão)": { price: 50.00, details: "Aplicação de esmalte em gel na mão com secagem rápida e alta durabilidade. Não inclui cutilagem e lixamento." }, // VALOR ALTERADO
            "Esmaltação em Gel (Pé)": { price: 45.00, details: "Aplicação de esmalte em gel no pé com secagem rápida e alta durabilidade. Não inclui cutilagem e lixamento." }, // VALOR ALTERADO
            "Henna na Sobrancelha": { price: 40.00, details: "Aplicação de Henna para preenchimento e definição da sobrancelha. Inclui design." }
        };

        // Função para formatar o valor como moeda brasileira
        const formatPrice = (value) => {
            return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        };

        // Elementos do Modal
        const modalBackdrop = document.getElementById('budget-modal-backdrop');
        const modalTitle = document.getElementById('modal-title');
        const modalBody = document.getElementById('modal-body');

        // Função para mostrar o Modal de Orçamento
        function showBudgetModal(serviceName) {
            const service = PRICES[serviceName];

            if (!service) return; // Garante que o serviço existe

            // 1. Atualiza Título do Modal
            modalTitle.textContent = serviceName;

            // 2. Atualiza Corpo do Modal
            modalBody.innerHTML = `
                <p class="text-3xl font-extrabold text-pink-600 text-center mb-4">${formatPrice(service.price)}</p>
                <p class="text-base text-center">${service.details}</p>
                <hr class="my-3 border-pink-100">
                <p class="text-sm text-gray-500 text-center">Valor base. Atendimento em Itapevi/SP.</p>
            `;

            // 3. Exibe o Modal
            modalBackdrop.style.display = 'flex';
        }

        // Função para esconder o Modal
        function hideBudgetModal() {
            modalBackdrop.style.display = 'none';
        }

        // Adiciona listeners de evento a todos os cartões de serviço
        document.addEventListener('DOMContentLoaded', () => {
            const serviceCards = document.querySelectorAll('.service-card');
            serviceCards.forEach(card => {
                card.addEventListener('click', () => {
                    const serviceName = card.getAttribute('data-service');
                    showBudgetModal(serviceName);
                });
            });

            // Permite fechar o modal clicando no fundo
            modalBackdrop.addEventListener('click', (event) => {
                if (event.target === modalBackdrop) {
                    hideBudgetModal();
                }
            });
        });

    </script>
</body>
