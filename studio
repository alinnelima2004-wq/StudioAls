                        <label for="client-phone" class="block text-sm font-medium text-gray-700">Telefone (WhatsApp)</label>
                        <input id="client-phone" name="phone" type="tel" required pattern="[0-9+ ()-]{6,}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" placeholder="(11) 9XXXX-XXXX">
